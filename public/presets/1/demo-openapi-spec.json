{
  "openapi": "3.0.1",
  "info": {
    "title": "CRM Preset",
    "description": "CRM Preset is a preset for a simple CRM system.",
    "version": "v1"
  },
  "paths": {
    "/api/contacts": {
      "get": {
        "operationId": "listContacts",
        "tags": ["Contacts"],
        "description": "List all the contacts.",
        "parameters": [
          {
            "name": "company",
            "in": "query",
            "description": "Filter by company name",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "name",
            "in": "query",
            "description": "Filter by contact name",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of contacts.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Contact"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createContact",
        "tags": ["Contacts"],
        "description": "Create a new contact.",
        "parameters": [],
        "requestBody": {
          "description": "A single contact object.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Contact"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A single contact object.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contact"
                }
              }
            }
          }
        }
      }
    },
    "/api/opportunities": {
      "get": {
        "operationId": "listOpportunities",
        "tags": ["Opportunities"],
        "description": "List all the sales opportunities.",
        "parameters": [
          {
            "name": "company",
            "in": "query",
            "description": "Filter by company name",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "contact",
            "in": "query",
            "description": "Filter by contact name",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "campaign",
            "in": "query",
            "description": "Filter by campaign name",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by status",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Open", "Won", "Lost"]
            }
          },
          {
            "name": "sortBy",
            "in": "query",
            "description": "Sort by field",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["value", "closeDate"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of sales opportunities.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Opportunity"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createOpportunity",
        "tags": ["Opportunities"],
        "description": "Create a new sales opportunity.",
        "parameters": [],
        "requestBody": {
          "description": "A single sales opportunity object.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Opportunity"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A single sales opportunity object.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Opportunity"
                }
              }
            }
          }
        }
      }
    },
    "/api/campaigns": {
      "get": {
        "operationId": "listCampaigns",
        "tags": ["Campaigns"],
        "description": "List all campaigns.",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Filter by campaign name",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter by status",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["Active", "Inactive"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of campaigns.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Campaign"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/engagements": {
      "get": {
        "operationId": "listEngagements",
        "tags": ["Engagements"],
        "description": "List all the engagement events (calls, emails, meetings or notes).",
        "parameters": [
          {
            "name": "company",
            "in": "query",
            "description": "Filter by company name",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of engagement events.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Engagement"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createEngagement",
        "tags": ["Engagements"],
        "description": "Add a new engagement event.",
        "parameters": [],
        "requestBody": {
          "description": "A single engagement event object.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Engagement"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A single engagement event object.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Engagement"
                }
              }
            }
          }
        }
      }
    },
    "/api/companies": {
      "get": {
        "operationId": "listCompanies",
        "tags": ["Companies"],
        "description": "List all the companies.",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "description": "Filter by company name",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "industry",
            "in": "query",
            "description": "Filter by industry",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of companies.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Company"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/contacts/{id}": {
      "get": {
        "operationId": "getContact",
        "tags": ["Contacts"],
        "description": "Get a specific contact by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of contact to return",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A single contact object.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contact"
                }
              }
            }
          }
        }
      }
    },
    "/api/opportunities/{id}": {
      "put": {
        "operationId": "updateOpportunity",
        "tags": ["Opportunities"],
        "description": "Update a specific sales opportunity by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of sales opportunity to update",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "description": "A single sales opportunity object.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Opportunity"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A single sales opportunity object."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Contact": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "phone": {
            "type": "string",
            "format": "phone"
          },
          "rep": {
            "type": "string",
            "description": "The sales rep who knows this contact best"
          },
          "company": {
            "type": "string",
            "description": "Associated company id"
          },
          "engagements": {
            "type": "array",
            "readOnly": true,
            "items": {
              "$ref": "#/components/schemas/Engagement"
            }
          },
          "opportunities": {
            "type": "array",
            "readOnly": true,
            "items": {
              "$ref": "#/components/schemas/Opportunity"
            }
          }
        },
        "required": ["name", "email"]
      },
      "Opportunity": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "title": {
            "type": "string"
          },
          "campaign": {
            "type": "string"
          },
          "contact": {
            "type": "string"
          },
          "company": {
            "type": "string"
          },
          "rep": {
            "type": "string",
            "description": "The sales rep who is leading the deal from our side"
          },
          "value": {
            "type": "number",
            "description": "Value of the opportunity in USD"
          },
          "status": {
            "type": "string",
            "description": "Current status of the opportunity",
            "enum": ["Open", "Won", "Lost"]
          },
          "closeDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["id", "title", "contact"]
      },
      "Engagement": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "type": {
            "type": "string",
            "enum": ["Call", "Email", "Meeting", "Note"]
          },
          "content": {
            "type": "string"
          },
          "rep": {
            "type": "string",
            "description": "The sales rep who is attending the engagement from our side"
          },
          "contacts": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Ids of contacts involved"
          }
        },
        "required": ["date", "type", "contacts"]
      },
      "Campaign": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "format": "date-time"
          },
          "endDate": {
            "type": "string",
            "format": "date-time"
          },
          "status": {
            "type": "string",
            "enum": ["Active", "Inactive"]
          }
        },
        "required": ["id", "name"]
      },
      "Company": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "industry": {
            "type": "string"
          },
          "employees": {
            "type": "integer"
          },
          "annual_revenue": {
            "type": "number"
          },
          "contacts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Contact"
            }
          },
          "opportunities": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Opportunity"
            }
          }
        }
      }
    }
  }
}
